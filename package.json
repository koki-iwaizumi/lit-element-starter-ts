{
  "name": "@koki-iwaizumi/lit-element-starter-ts",
  "version": "1.1.0",
  "description": "React Component Lib with Lit",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "lint": "npm run lint:lit-analyzer && npm run lint:eslint",
    "lint:eslint": "eslint 'src/**/*.ts'",
    "lint:lit-analyzer": "lit-analyzer",
    "format": "prettier \"**/*.{cjs,html,js,json,md,ts}\" --ignore-path ./.eslintignore --write",
    "serve": "wds --watch"
  },
  "keywords": [
    "web-components",
    "lit-element",
    "typescript",
    "lit"
  ],
  "author": "koki-iwaizumi <5434KO5434@gmail.com>",
  "dependencies": {
    "@lit-labs/react": "^1.0.1",
    "lit": "^2.0.0"
  },
  "devDependencies": {
    "@types/react": "^17.0.38",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.30.0",
    "@web/dev-server": "^0.1.22",
    "@web/dev-server-legacy": "^0.1.4",
    "@web/dev-server-rollup": "^0.3.9",
    "@webcomponents/webcomponentsjs": "^2.6.0",
    "deepmerge": "^4.2.2",
    "eslint": "^7.32.0",
    "lit-analyzer": "^1.1.10",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "typescript": "^4.3.5"
  },
  "peerDependencies": {
    "react": "^17.0.2"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/koki-iwaizumi"
  }
}
